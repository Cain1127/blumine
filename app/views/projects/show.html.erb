<article class="module width_full">
  <header>
    <h3 class="tabs_involved">
      <%= icon 'idea' %>
      <%= t('project.ideas') %>
    </h3>
  </header>
  <div class="module_content">
    <%= render @project.issues.where(['label = ?', 'idea']).limit(10) %>
  </div>
  <footer>
    <ul class="actions">
       <li><%= link_to t(:new_idea), new_project_issue_path(@project) + '/idea', :class => :btn %></li>
    </ul>
  </footer>
</article>

