<article class="module width_full">

	<header><h3><%= t(:account_settings) %></h3></header>

	<div class="module_content">
		<%= form_for current_user, :url => account_path do |f| %>
		  <%= render 'shared/error_messages', :obj => f.object %>
		  <div class="row">
		    <%= f.label :name, t(:username) %>
		    <span class="quiet"><%= current_user.name %></span>
		  </div>
		  <div class="row">
		    <%= f.label :email, t(:email) %>
		    <span class="quiet"><%= current_user.email %></span>
		  </div>
		  <div class="row">
		    <%= f.label :locale, t(:default_locale) %>
		    <%= f.select :locale, options_for_select({"English" => "en", "中文" => "zh"}, current_user.locale) %>
		  </div>
		  <div class="row">
		    <%= f.label :role, t('role.name') %>
		    <%= f.select :role, options_for_select(User::ROLES.collect {|role| [t("role.#{role}"), role] }, current_user.role) %>
		  </div>
		  <div class="row">
		    <%= f.submit t(:save) %>
		  </div>
		<% end %>
	</div>

</article>
<!-- end of styles article -->

