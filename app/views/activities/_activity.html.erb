<div class="row">
  <% case activity.event_name %>
  <% when 'create_project' %>
    <%= image_tag 'folder.png', :align => :absmiddle, :width => 16, :height => 16 %>
  <% when 'create_issue' %>
    <%= image_tag 'pencil.png', :align => :absmiddle, :width => 16, :height => 16 %>
  <% when 'create_comment' %>
    <%= image_tag 'comments.png', :align => :absmiddle, :width => 16, :height => 16 %>
  <% when 'change_issue_state' %>
    <%= image_tag 'gear.png', :align => :absmiddle, :width => 16, :height => 16 %>
  <% when 'assign_issue' %>
    <%= image_tag 'key.png', :align => :absmiddle, :width => 16, :height => 16 %>
  <% when 'chat' %>
    <%= image_tag 'chat.png', :align => :absmiddle, :width => 16, :height => 16 %>
  <% end %>
  <span class="author"><%= link_to activity.user.name, activity.user, :class => :plain %></span><%=raw format_activity(activity) %>
  <span class="small quiet" style="margin-left: 10px;"><%= time_ago_in_words(activity.created_at) + t(:ago) %></span>
</div>
