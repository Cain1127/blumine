<!DOCTYPE html>
<html>
  <%= render 'layouts/head' %>
<body>
  <%= render 'layouts/nav_header' %>
  <div class="container">
    <%= render 'layouts/flash_messages' %>
  </div>

  <div class="container" id="main_area">
    <%= render 'layouts/breadcrumbs', :breadcrumbs => breadcrumbs %>

    <div class="span-6" id="sidebar">
      <%= yield :sidebar %>
    </div>

    <div class="span-16 pull-1 last" id="content">
      <%= yield %>
    </div>

  </div>

  <%= render 'layouts/footer' %>
  <%= render 'layouts/main_javascripts' %>
  <%= render 'shared/ga' if Rails.env.production? %>
</body>
</html>

