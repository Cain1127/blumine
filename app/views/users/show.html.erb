<% content_for :sidebar do %>
  <h1 class="silver"><%= t(:my_assigned_issues) %></h1>
  <div id="my_assigned_issues" title="<%= t(:drag_issue_to_sort_priority) %>">
    <%= render :partial => 'my_assigned_issue',
      :collection => current_user.assigned_issues.except_closed.except_ignored,
      :spacer_template => 'shared/spacer'
    %>
  </div>

  <h1 class="silver"><%= t(:recently_created_issues) %></h1>
  <%= render :partial => 'my_assigned_issue', :collection => @user.issues.order('created_at DESC').limit(5), :spacer_template => 'shared/spacer' %>

<% end %>


<% content_for :on_ready_hook do %>
  $.make_sortable('my_assigned_issues', 'div.assigned_issue', '<%= assigned_issues_sort_path %>');
<% end %>

<div class="row">
  <%= render 'status_logs/form' %>
</div>
<h1 class="silver"><%= t(:feed) %></h1>
<div id="feed_box">
  <%= render :partial => 'status_logs/status_log', :collection => StatusLog.order('created_at DESC').limit(30), :spacer_template => 'shared/line_spacer' %>
</div>


